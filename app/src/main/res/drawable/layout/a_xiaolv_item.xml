<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableRow
        android:layout_width="960dp"
        android:layout_height="20dp"
        android:layout_marginTop="1dp"
        >

        <TextView
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_marginLeft="1dp"
            android:background="#fff	"
            android:gravity="center"
            android:text="立式液体机(xxxx)"
            android:maxLines="1"
            android:textColor="#000"
            android:id="@+id/jtls"
            android:textSize="12dp"

            />

        <TextView
            android:id="@+id/day1"
            android:layout_width="105dp"
            android:layout_height="20dp"
            android:layout_marginLeft="1dp"
            android:background="#fff	"
            android:gravity="center"
            android:maxLines="1"
            android:text="日 期 1"
            android:textColor="#000"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/day2"
            android:layout_width="105dp"
            android:layout_height="20dp"
            android:layout_marginLeft="1dp"
            android:background="#fff	"
            android:gravity="center"
            android:text="模具编号"
            android:maxLines="1"
            android:textColor="#000"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/day3"
            android:layout_width="105dp"
            android:layout_height="20dp"
            android:layout_marginLeft="1dp"
            android:background="#fff	"
            android:gravity="center"
            android:text="预计开始时间"
            android:maxLines="1"
            android:textColor="#000"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/day4"
            android:layout_width="105dp"
            android:layout_height="20dp"
            android:layout_marginLeft="1dp"
            android:background="#fff	"
            android:gravity="center"
            android:text="预计时间"
            android:maxLines="1"
            android:textColor="#000"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/day5"
            android:layout_width="105dp"
            android:layout_height="20dp"
            android:layout_marginLeft="1dp"
            android:background="#fff	"
            android:gravity="center"
            android:text="计划数量"
            android:textColor="#000"
            android:maxLines="1"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/day6"
            android:layout_width="105dp"
            android:layout_height="20dp"
            android:layout_marginLeft="1dp"
            android:background="#fff	"
            android:gravity="center"
            android:text="成型周期"
            android:maxLines="1"
            android:textColor="#000"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/day7"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:background="#fff	"
            android:gravity="center"
            android:text="原料"
            android:maxLines="1"
            android:textColor="#000"
            android:textSize="12dp"
            />




    </TableRow>

</LinearLayout>
